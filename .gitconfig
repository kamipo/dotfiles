[user]
	name = Ryuta Kamizono
	email = kamipo@gmail.com
[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
[core]
	excludesfile = /Users/kamipo/.gitignore
	quotepath = false
	precomposeunicode = true
[alias]
	st = status
	ci = commit
	co = checkout
	br = branch
	di = diff
	pu = pull
	pr = pull --rebase
	tree = log --graph --pretty=oneline --abbrev-commit --decorate
	graph = log --graph --pretty='format:%C(yellow)%h%Creset %Cgreen%an%Creset |%Cred%d%Creset %s'
[hooks]
	mailinglist = kamipo+ml@gmail.com
	announcelist = kamipo+al@gmail.com
	envelopesender = gitnotify@kamipo.net
	emailprefix = [gitnotify]
	showrev = "git show -C %s; echo"
