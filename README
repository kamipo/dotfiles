# perlbrew
curl -LO http://xrl.us/perlbrew
perl perlbrew install
perl perlbrew init
source $HOME/perl5/perlbrew/etc/bashrc
rm ~/perlbrew

perlbrew install perl-5.12.2
perlbrew install perl-5.12.2 -D=usethreads --as perl-5.12.2-usethreads
perlbrew install perl-5.12.2 -D=DEBUGGING  --as perl-5.12.2-DEBUGGING
perlbrew switch perl-5.12.2

# cpanm
wget http://cpanmin.us/ -O - | perl - App::cpanminus

# installing tools
cpanm -v Module::Install
cpanm -v App::Ack
cpanm -v http://github.com/kazuho/kaztools/tarball/master
cpanm -v cpan-upload-http

# homebrew
ruby -e "$(curl -fsS http://gist.github.com/raw/323731/install_homebrew.rb)"

# gisty
gem install nokogiri
gem install swdyh-gisty
