# perlbrew
curl -L http://xrl.us/perlbrewinstall | bash
source $HOME/perl5/perlbrew/etc/bashrc

perlbrew install perl-5.14.1
perlbrew install perl-5.14.1 -D=usethreads --as perl-5.14.1-usethreads
perlbrew install perl-5.14.1 -D=DEBUGGING  --as perl-5.14.1-DEBUGGING
perlbrew switch  perl-5.14.1-DEBUGGING
perlbrew install-cpanm

# installing tools
cpanm -v Module::Install
cpanm -v Module::Install::AuthorTests
cpanm -v Module::Install::Repository
cpanm -v Module::Install::XSUtil
cpanm -v App::Ack
cpanm -v http://github.com/kazuho/kaztools/tarball/master
cpanm -v cpan-upload-http

# rvm
curl -L https://rvm.beginrescueend.com/install/rvm | bash
source $HOME/.rvm/scripts/rvm
rvm install ruby-1.9.2-head
rvm use ruby-1.9.2-head --default

gem install rubygems-test
gem install rails --pre

# homebrew
ruby -e "$(curl -fsSL https://raw.github.com/gist/323731)"

# gisty
gem install nokogiri
gem install swdyh-gisty
